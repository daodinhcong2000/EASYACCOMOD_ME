	<div class="wrapper input">
			<div class="inner">
				<h2 style="text-align: center;">Tao một bài đăng</h2>
				<form form action="/admin/createRoom/store" method="POST" name="createRoom"enctype="multipart/form-data" >
					</br>
					<div class="form-row">
						<div class="form-wrapper">
							<label for="">Địa Chỉ *</label>
							<input name="address" class="form-control" type="text" placeholder="Điền địa chỉ">
						</div>
						<div class="form-wrapper">
							<label for="">Số nhà *</label>
							<input type="text" name="house_number" class="form-control" placeholder="Điền số nhà">
						</div>

						<div class="form-wrapper">
							<label for="">Tên đường*</label>
							<input type="text" name="street" class="form-control" placeholder="Điền phố">
						</div>

						<div class="form-wrapper">
							<label for="">Xã/Phường *</label>
							<input type="text" name="town" class="form-control" placeholder="Điền Xã">
						</div>

						<div class="form-wrapper">
							<label for="">Quận/Huyện *</label>
							<input class="form-control" name="district" type="text" placeholder="Điền quận/huyện">
						</div>

						<div class="form-wrapper">
							<label for="">Tỉnh/Thành Phố *</label>
							<input class="form-control"  name="city" type="text" placeholder="Điền tỉnh/thành phố">
						</div>
					</div>
					<div class="form-row">
						<div class="form-wrapper">
							<label for="">Địa điểm công cộng *</label>
							<input class="form-control"  name="public_places" type="text" placeholder="Điền địa điểm công cộng gần phòng">
						</div>

						<div class="form-wrapper">
							<label for="">Số phòng *</label>
							<input class="form-control" name="amount" type="text" placeholder="Điền số phòng cho thuê">
						</div>

						<div class="form-wrapper">
							<label for="">Giá phòng *</label>
							<input class="form-control" name="cost_room" type="text" placeholder="Điền giá phòng">
						</div>

						<div class="form-wrapper">
							<label for="">Diện tích *</label>
							<input class="form-control" name="acreage" type="text" placeholder="Điền diện tích">
						</div>

					</div>
					<div class="form-row last">
						<div class="form-wrapper">
							<label for="">Nhà vệ sinh *</label>
							<select name="WC_status" class="form-control">
								<option value="Chung"selected>Chung</option>
								<option value="Riêng">Riêng</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>
						<div class="form-wrapper">
							<label for="">Nóng lạnh *</label>
							<select name="water_hot" id="" class="form-control">
								<option value="Có"selected>Có</option>
                                <option value="Không">Không</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>

						<div class="form-wrapper">
							<label for="">Bếp *</label>
							<select name="kitchen" id="" class="form-control">
								<option value="Không nấu ăn"selected>Không nấu ăn</option>
								<option value="Bếp riêng">Bếp riêng</option>
								<option value="Bếp chung">Bếp chung</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>

						<div class="form-wrapper">
							<label for="">Điều hòa *</label>
							<select name="air_conditioner" id="" class="form-control">
								<option value="Có"selected>Có</option>
                                <option value="Không">Không</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>

						<div class="form-wrapper">
							<label for="">Ban công *</label>
							<select name="balcony" id="" class="form-control">
								<option value="Có"selected>Có</option>
                                <option value="Không">Không</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>
					</div>

					<div class="form-row last">
						<div class="form-wrapper">
							<label for="">Giá điện *</label>
							<select name="electricity_water_status" id="" class="form-control">
								<option value="Giá dân" selected>Giá dân</option>
                                <option value="Giá thuê">Giá thuê</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>

						<div class="form-wrapper">
							<label for="">Trạng thái *</label>
							<select name="status" id="" class="form-control">
								<option value="Chung chủ" selected>Chung chủ</option>
								<option value="Không chung chủ">Không chung chủ</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>

						<div class="form-wrapper">
							<label for="">Loại phòng *</label>
							<select name="room_kind" id="" class="form-control">
								<option value="phòng trọ" selected>Phòng trọ</option>
								<option value="chung cư mini">Chung cư mini</option>
								<option value="chung cư nguyên căn">Chung cư nguyên căn</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>
						
						<div class="form-wrapper">
							<label for="">Chu kì *</label>
							<select name="cycile" id="" class="form-control">
								<option value= "week" selected>Tuần</option>
								<option value= "month">Tháng</option>
								<option value= "quarter">Quý</option>
								<option value= "year">Nam</option>
							</select>
							<i class="zmdi zmdi-chevron-down"></i>
						</div>

						<div class="form-wrapper">
							<label for="">Số chu kì *</label>
							<input class="form-control" name="time_life" type="text" placeholder="Điền số thời gian">
						</div>

						<div class="form-wrapper">
							<label for="">Tiền điện *</label>
							<input class="form-control" name="electricity_cost" type="text" placeholder="Điền số tiền điện">
						</div>

						<div class="form-wrapper">
							<label for="">Tiền nước *</label>
							<input class="form-control" name="water_cost" type="text" placeholder="Điền số tiền nước">
						</div>
					</div>
					<div class="form-wrapper">
						<label for="formFileMultiple" class="form-label">Ảnh đính kèm</label>
						<input class="form-control" type="file" id="formFileMultiple" multiple name="images">
					</div>
					<div>
						<button type="submit" class="btn btn-primary" value="createRoom" onclick="createRoom()">Tạo phòng</button>
						
					</div>
				</form>
				<button class="btn btn-primary" value="createRoom" onclick="cancle()">Hủy</button>
